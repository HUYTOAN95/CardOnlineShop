@model IEnumerable<ShopOnline.Areas.Admin.Models.DataModel.Administrator>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Danh sách nhà quản trị }

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
