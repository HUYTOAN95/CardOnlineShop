@model IEnumerable<CardOnlineShop.Areas.Admin.Models.DataModel.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Danh sách sản phẩm
}
<link href="~/Areas/Admin/Content/css/theme.css" rel="stylesheet" />
<div class="table-responsive table--no-card m-b-30">
    @using (Html.BeginForm("Index", "Products", FormMethod.Get))
    {
        <div class="row form-group" style="margin-top:1%">
            <div class="col-lg-12">
                <div class="col-md-4">
                    <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" />
                </div>
                <div class="col-md-4" style="margin-top:1%">
                    <button type="submit" class="btn btn-success">Search</button>
                    <a class="btn btn-primary" href="/Admin/Products/Create">Add new</a>
                    <a class="btn btn-success" href="/Admin/Products/Report">Report</a>
                </div>
            </div>
        </div>
    }
    <table class="table table-borderless table-striped table-earning">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProductID)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.ProductName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductCost)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category.CategoryName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductCost)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.CategoryName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ProductID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ProductID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ProductID })
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
