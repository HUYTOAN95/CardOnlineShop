@model IEnumerable<CardOnlineShop.Areas.Admin.Models.DataModel.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Danh sách loại hàng
}

<div class="table-responsive table--no-card m-b-30">
    @using (Html.BeginForm("Index", "Categories", FormMethod.Get))
    {
        <div class="row form-group" style="margin-top:1%">
            <div class="col-lg-12">
                <div class="col-md-4">
                    <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" />
                </div>
                <div class="col-md-4" style="margin-top:1%">
                    <button type="submit" class="btn btn-success">Search</button>
                    <a class="btn btn-primary" href="/Admin/Categories/Create">Add new</a>
                    <a class="btn btn-success" href="/Admin/Categories/Report">Report</a>
                </div>
            </div>
        </div>
    }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryStatus)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryStatus)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CategoryID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.CategoryID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CategoryID })
                </td>
            </tr>
        }

    </table>
</div>
